import "Srl/Console";
use Srl;

func haveOppositeSign(a: Int, b: Int): Int{
    return (a ^ b) < 0;
}


    def x: Int[-5];
    def y: Int[10];
    
    if haveOppositeSign(x, y){
        Console.print("x and y have opposite signs.\n");
        
    }else{
        Console.print("x and y do not have opposite signs.\n");
    }
    
    
    return 0;
